{
  "name": "brain.is",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "encrypt": "encrypt-env --env BRAIN --write",
    "decrypt": "encrypt-env --decrypt --env BRAIN --write",
    "compile-sass": "node-sass ./stylesheets/ --quiet --output ./dist/css/",
    "css-autoprefix": "postcss --use autoprefixer dist/css/*.css -d dist/css/",
    "compile-css": "npm run compile-sass && npm run css-autoprefix",
    "compile-prod": "npm run compile-sass && npm run css-autoprefix",
    "dev": "nodemon -x \"npm run compile-sass && node index.js\" -e js,html,scss",
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "k@mackwerk.dk",
  "license": "MIT",
  "dependencies": {
    "boom": "^3.2.2",
    "giphy-api": "^1.1.15",
    "handlebars": "^4.0.5",
    "hapi": "^13.3.0",
    "inert": "^4.0.1",
    "lru-cache": "^4.0.1",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "dotenv": "^2.0.0",
    "encrypt-env": "^0.2.8",
    "node-sass": "^3.8.0",
    "postcss-cli": "^2.5.2"
  }
}
